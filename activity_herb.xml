<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HerbActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <GridLayout
                android:layout_width="375dp"
                android:layout_height="1123dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@android:color/holo_green_light"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:rowCount="5">

                <ImageButton
                    android:id="@+id/Sagebutton"
                    android:layout_width="179dp"
                    android:layout_height="182dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:adjustViewBounds="true"
                    android:background="#00FFFFFF"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/download__73_" />

                <ImageButton
                    android:id="@+id/Parsleybutton"
                    android:layout_width="179dp"
                    android:layout_height="182dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:adjustViewBounds="true"
                    android:background="#00FFFFFF"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/download__74_" />

                <ImageButton
                    android:id="@+id/Oreganobutton"
                    android:layout_width="179dp"
                    android:layout_height="182dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:adjustViewBounds="true"
                    android:background="#00FFFFFF"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/download__75_" />

                <ImageButton
                    android:id="@+id/Mintbutton"
                    android:layout_width="179dp"
                    android:layout_height="182dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:adjustViewBounds="true"
                    android:background="#00FFFFFF"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/download__76_" />

                <ImageButton
                    android:id="@+id/Corianderbutton"
                    android:layout_width="179dp"
                    android:layout_height="182dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:adjustViewBounds="true"
                    android:background="#00FFFFFF"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/download__77_" />

                <ImageButton
                    android:id="@+id/Basilbutton"
                    android:layout_width="179dp"
                    android:layout_height="182dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:adjustViewBounds="true"
                    android:background="#00FFFFFF"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/download__78_" />

                <ImageButton
                    android:id="@+id/Chivesbutton"
                    android:layout_width="179dp"
                    android:layout_height="182dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:adjustViewBounds="true"
                    android:background="#00FFFFFF"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/download__79_" />

                <ImageButton
                    android:id="@+id/Dillbutton"
                    android:layout_width="179dp"
                    android:layout_height="182dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:adjustViewBounds="true"
                    android:background="#00FFFFFF"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/download__80_" />

                <ImageButton
                    android:id="@+id/Rosemarybutton"
                    android:layout_width="179dp"
                    android:layout_height="182dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:adjustViewBounds="true"
                    android:background="#00FFFFFF"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/download__81_" />
            </GridLayout>

        </LinearLayout>
    </ScrollView>
